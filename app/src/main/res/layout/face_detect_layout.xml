<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FaceDetectActivity" >

    <org.interview.facedetect.FaceImageView
        android:id="@+id/filter_img_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <SeekBar
        android:id="@+id/seekbar_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        />
    <TextView 
        android:id="@+id/original_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_above="@id/seekbar_id"
        android:text="@string/action_original"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
        />
</RelativeLayout>
